{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "specs/common/geometry_manifest.schema.json",
  "title": "Geometry Manifest Schema v1",
  "description": "모든 모듈의 L2 산출물에 포함되는 geometry_manifest.json의 스키마입니다. 단위는 meters(m)이며, 경로는 상대경로 또는 절대경로를 사용할 수 있습니다.",
  "type": "object",
  "required": [
    "schema_version",
    "module",
    "contract_version",
    "geometry_impl_version",
    "inputs_fingerprint",
    "artifacts",
    "measurements_summary"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "스키마 버전 (예: 'geometry_manifest.v1')",
      "pattern": "^geometry_manifest\\.v\\d+$"
    },
    "module": {
      "type": "string",
      "enum": ["body", "garment", "fitting"],
      "description": "모듈 식별자"
    },
    "contract_version": {
      "type": "string",
      "description": "Contract 버전 (예: 'contract.v1', 'sizekorea_v2')"
    },
    "geometry_impl_version": {
      "type": "string",
      "description": "Geometry 구현 버전 (예: 'circumference_v0', 'bust_underbust_v0')"
    },
    "dataset_version": {
      "type": ["string", "null"],
      "description": "데이터셋 버전 (optional, nullable 허용)"
    },
    "inputs_fingerprint": {
      "type": "string",
      "description": "입력 데이터의 지문(fingerprint) 또는 해시값"
    },
    "artifacts": {
      "type": "object",
      "required": ["mesh_path"],
      "properties": {
        "mesh_path": {
          "type": "string",
          "description": "Mesh 파일 경로 (.obj, .ply 등)"
        },
        "measurements_path": {
          "type": "string",
          "description": "측정 결과 파일 경로 (.json, .csv 등)"
        },
        "npz_path": {
          "type": "string",
          "description": "NPZ 파일 경로 (경량화된 데이터)"
        },
        "aux_paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "추가 보조 파일 경로 배열"
        }
      },
      "additionalProperties": false
    },
    "measurements_summary": {
      "type": "object",
      "description": "측정 결과 요약 (키-값 쌍, 단위는 meters)",
      "additionalProperties": {
        "type": "number"
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "경고 메시지 배열"
    }
  },
  "additionalProperties": false
}
